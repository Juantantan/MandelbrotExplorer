{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "g++ build active file",
		"command": "/usr/bin/g++",
		"args": [
			"-g",
			"${file}",
			"-o",
			"${workspaceFolder}/bin/main.out",
			"-lSDL2main",
			"-lSDL2",
			"-lSDL2_image",
			"-lGL",
			"-lGLU", 
			"-lOpenCL" ],
		"options": {
		  "cwd": "/usr/bin"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  }
	]
  }
    