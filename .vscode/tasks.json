{
	"tasks": [
	  {
		"type": "shell",
		"label": "g++ build active file",
		"command": "/usr/bin/g++",
		"args": ["-g",
			"${file}",
			"-o",
			"${workspaceFolder}/src/${fileBasenameNoExtension}.o",
			"-lGL",
			"-lGLU", 
			"-lSDL2main",
			"-lSDL2", 
			"-lSDL2_image",
			"-lOpenCL" 
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			},
		"detail": "compiler: /usr/bin/gcc"
	  }
	],
	"version": "2.0.0"
  }
  